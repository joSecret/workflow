<style>
  .menu {
    position: fixed;
    background-color: red;
    inset-inline: 0;
    top: 0;
    height: 100dvh;
  }
  .card {
    --img-ratio: 16/9;

    & > img {
      aspect-ratio: var(--img-ratio);
    }
  }
  .title {
    /* text-wrap: balance; */
    width: fit-content;
  }

  .card:has(img) {
    .description {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  }
</style>

<style>
  .wrapper {
    width: min(100% - 2rem, 60rem);
    margin-inline: auto;
  }

  .auto-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 280px), 1fr));
  }

  .card {
    --img-ratio: 3/2;

    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.15);
    border-radius: 0.5rem;

    & > * {
      margin: 0;
    }

    & > img {
      border-radius: 0.5rem 0.5rem 0 0;
    }

    & > :not(img) {
      margin-left: 1rem;
      margin-right: 1rem;
    }
    & > :not(h2, h3, h4) {
      font-size: 0.9rem;
    }

    & > :last-of-type:not(img, h2, h3, h4) {
      margin-bottom: 1rem;
    }
  }
</style>
